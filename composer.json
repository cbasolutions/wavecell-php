{
  "name": "odenktools/wavecell-php",
  "type": "library",
  "description": "Rest PHP Library For Wavecell SMS",
  "keywords": [
    "http",
    "rest",
    "php",
    "Wavecell",
    "Wavecell PHP",
    "HTTP client"
  ],
  "homepage": "https://github.com/odenktools/wavecell-php",
  "license": "MIT",
  "authors": [
    {
      "name": "odenktools",
      "email": "odenktools86@gmail.com",
      "homepage": "https://odenktools.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.4",
    "ext-curl": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^5.0|^6.0",
    "nesbot/carbon": "~1.18",
    "paragonie/random_compat": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8.35 || ^5.7 || ^6.4 || ^7.0"
  },
  "autoload": {
    "psr-0": {
      "Wavecell\\": "wavecell/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "prefer-stable": true,
  "minimum-stability": "dev",
  "scripts": {
    "test": "phpunit --colors=always",
    "test:ci": "composer test -- --verbose --coverage-text"
  }
}
